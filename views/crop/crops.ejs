<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/area.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="centered">
        <h1><%= area.name %></h1>
        <hr>
        <div>
            <!-- <img src="<%# area.imgurl %>" alt="<%# area.name %>"> -->
        </div>
    </main>
    <main>
        <% if (arr.length > 0) { %>
            <div>
                <h3>Suitable Crops for this area: </h3>
                <h4>(Lower the incompatibility the better the crop growth)</h4>
            </div>
            <div class="grid">
                <% for (let crop of arr) { %>
                    <article class="card area-one">
                        <header class="card__header">
                            <h1 class="area-name"><%= crop.name %></h1>
                        </header>
                        <div class="card__image">
                            <img src="/images/<%=crop.id%>.png" alt="">
                        </div>
                        <div class="card__content">
                            <form action="/select-crop" method="POST">
                                <input type="hidden" value="<%= crop.name %>" name="cropName" />
                                <button class="btn" type="submit">Select crop</button>
                                <p style="display: inline-block;">Incompatibility: </p> <p style="display: inline-block;"><%= crop.INCOMPATIBILITY %>
                              </form>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Crops Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>